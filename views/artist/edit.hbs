<main>

	<div class="form">

		<h1>Edit<br>the<br>artist</h1>

		<form action="/artist/{{artist._id}}?_method=PATCH" method="POST">
			<p class="input-field">Edit artist name:
				<input type="text" name="artistName" value="{{artist.artistName}}">
			</p>
			<p class="input-field">Edit artist description:
				<input type="text" name="artistDescription" value="{{artist.artistDescription}}">
			</p>
			<p class="input-field">Edit the genre:
				<input type="text" name="artistGenre" value="{{artist.artistGenre}}">
			</p>
			<p class="input-field">Edit link:
				<input type="text" name="artistLink" value="{{artist.artistLink}}">
			</p>
			<button type="submit">Save your edits</button>
		</form>

		<a href="/">Return to Home Page</a>

	</div>
</main>