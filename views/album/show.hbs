<main>
    <div class="show">
        <div>
            <h1>Songs<br>From The<br>Album</h1>
        </div>
        <div class="show-screen">
            <h2 class="name">{{album.albumName}}</h2>
            <h4 class="description1">{{album.albumDescription}}</h4>
            <h4 class="h4">Year released: {{album.albumYear}}</h4>
            <h4 class="h4">Click on song to see more info: </h4>
            <div class="list-item">
                {{#each album.albumSong}}
                <a href="/artist/{{id}}/album/{{id}}/song/{{id}}">{{songName}}</a>
                <h4 class="description1">{{songDescription}}</h4>
                {{/each}}
            </div>
        </div>
        <div class="show-panel">
            <div class="show-buttons">
                <a href="/song/new"><button>Add a song to the album</button></a>
                <a href="/album/{{album.id}}/edit"><button>Edit album information</button></a>
                <form action="/album/{{album._id}}?_method=DELETE" method="POST" class="delete">
                    <button type="submit">Push to delete this album</button>
                </form>
            </div>
            <div class="home-page-link">
                <a href="/">Return to Home Page</a>
            </div>
        </div>
    </div>
</main>